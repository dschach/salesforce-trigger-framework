{
	"trailingComma": "none",
	"useTabs": true,
	"printWidth": 180,
	"bracketSameLine": true,
	"bracketSpacing": true,
	"singleQuote": true,
	"tabWidth": 2,
	"apexInsertFinalNewline": false,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		},
		{
			"files": "*.html",
			"options": { "parser": "html", "useTabs": false, "tabWidth": 2 }
		},
		{
			"files": "*.css",
			"options": { "useTabs": false, "tabWidth": 4, "singleQuote": false }
		},
		{
			"files": "*.cls",
			"options": { "parser": "apex", "tabWidth": 4, "singleQuote": true }
		},
		{
			"files": "*.{yml,yaml}",
			"options": { "parser": "yaml", "singleQuote": false }
		},
		{
			"files": "*.json",
			"options": { "parser": "json", "printWidth": 80, "singleQuote": false }
		},
		{
			"files": ".prettierrc",
			"options": { "parser": "json", "printWidth": 80 }
		}
	],
	"plugins": ["prettier-plugin-apex"],
	"$schema": "https://json.schemastore.org/prettierrc"
}
